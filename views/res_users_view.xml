<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_users_form_simple_modif_ttd_inherit" model="ir.ui.view">
            <field name="name">res.users.preferences.form.ttd.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form_simple_modif"/>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='signature']" position="inside">
                    <field name="ttd" widget="image"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>